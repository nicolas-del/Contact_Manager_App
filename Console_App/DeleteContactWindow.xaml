<Window x:Class="Console_App.DeleteContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Console_App"
        mc:Ignorable="d"
        Title="DeleteContactWindow" Height="250" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Delete a contact" 
                   FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="nameTextBlock" FontSize="24" Width="400" Style="{StaticResource placeHolder}" Tag="Type the NAME of the contact here!"/>
            <Button x:Name="Delete" Content="Delete Contact" Margin="5,20,5,0" Click="Delete_Contact" FontSize="28" Width="400"/>
        </StackPanel>
    </Grid>
</Window>
