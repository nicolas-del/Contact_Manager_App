<Window x:Class="Console_App.EditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Console_App"
        mc:Ignorable="d"
        Title="EditContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Edit Contact Window" 
                   FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="nameTextBlock" FontSize="24" Width="500" Style="{StaticResource placeHolder}" Tag="Modify the NAME here!"/>
            <TextBox x:Name="phoneNumberTextBlock" FontSize="24" Width="500" Style="{StaticResource placeHolder}" Tag="Modify the PHONE NUMBER here!"/>
            <TextBox x:Name="addressTextBlock" FontSize="24" Width="500" Style="{StaticResource placeHolder}" Tag="Modify the ADDRESS here!"/>
            <TextBox x:Name="birthdayTextBlock" FontSize="24" Width="500" Style="{StaticResource placeHolder}" Tag="Modify the BIRTHDAY here!"/>
            <Button x:Name="Update" Content="Update contact" Margin="5,20,5,0" Click="Update_Contact" FontSize="28" Width="500"/>
        </StackPanel>
    </Grid>
</Window>
